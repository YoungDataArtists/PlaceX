@{
    ViewBag.Title = "Place X Main Page";

}



<div class="container-fluid">
    <!-- Brand and toggle get grouped for better mobile display -->
    <!-- Collect the nav links, forms, and other content for toggling -->
    <form class="navbar-form">
        <div class="form-group">
            <input type="text" class="form-control" id="search-input" placeholder="Search">
        </div>

        <button type="button" class="btn btn-primary" id="btn-my-location" title="To my location!" onclick="showMyPosition()"><span class="glyphicon glyphicon-map-marker"></span></button>
    </form>
    <div>
        @if (User.Identity.IsAuthenticated)
        {
            <div class="navbar-text">
                <p>Вы вошли как: @User.Identity.Name </p>
            </div>

            using (Html.BeginForm("LogOff", "Account", FormMethod.Post))
            {
                @Html.AntiForgeryToken()
                <input type="submit" class="btn btn-default glyphicon-log-out" value="Sign out" />
            }
        }
        else
        {
            <button data-toggle="modal" href="javascript:void(0)" onclick="openLoginModal();" class="btn btn-default pull-right">Sign Up</button>
        }
    </div>
</div>
</div>


<div class="modal fade login" id="loginModal">
    <div class="modal-dialog login animated">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h4 class="modal-title">Login with</h4>
            </div>
            <div class="modal-body">

                <div class="box">
                    <div class="content">
                        <div class="social">
                            @using (Html.BeginForm("ExternalLogin", "Account", FormMethod.Post))
                            {
                                @Html.AntiForgeryToken()
                                <input type="submit" id="google_login" class="circle google" name="provider" value="Google" title="Log in using your Google account" />
                            }
                            @*<i class="fa fa-google-plus" aria-hidden="true"></i>*@
                            @using (Html.BeginForm("ExternalLogin", "Account", FormMethod.Post))
                            {
                                @Html.AntiForgeryToken()
                                <input type="submit" id="facebook_login" class="circle facebook" name="provider" value="Facebook" title="Log in using your Facebook account" />
                            }
                            @*<a id="facebook_login" class="circle facebook" href="#">
                                <i class="fa fa-facebook fa-fw"></i>*@
                            @*</a>*@
                        </div>
                        <div class="division">
                            <div class="line l"></div>
                            <span>or</span>
                            <div class="line r"></div>
                        </div>
                        <div class="error"></div>
                        <div class="form loginBox">
                            @using (Html.BeginForm("Login", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                            {
                                @Html.AntiForgeryToken()
                                <input id="email" class="form-control" type="text" placeholder="Email" name="email">
                                <input id="password" class="form-control" type="password" placeholder="Password" name="Password">
                                <input type="submit" class="btn btn-default btn-login" value="Login" />
                            }
                        </div>
                    </div>
                </div>
                <div class="box">
                    <div class="content registerBox" style="display:none;">
                        <div class="form">
                            @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                            {
                                @Html.AntiForgeryToken()
                                <input id="email" class="form-control" type="text" placeholder="Email" name="email">
                                <input id="password" class="form-control" type="password" placeholder="Password" name="Password">
                                <input id="password_confirmation" class="form-control" type="password" placeholder="Repeat Password" name="ConfirmPassword">
                                <input type="submit" class="btn btn-default" value="Create account" />
                            }
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <div class="forgot login-footer">
                    <span>
                        Looking to
                        <a href="javascript: showRegisterForm();">create an account</a>
                        ?
                    </span>
                </div>
                <div class="forgot register-footer" style="display:none">
                    <span>Already have an account?</span>
                    <a href="javascript: showLoginForm();">Login</a>
                </div>
            </div>
        </div>
    </div>
</div>







<div id="map" style="height: 800px"></div>



@section scripts{
    <script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyC-4VODBOr-2m07H3PxJxrZ4nuLYo1XPi4&libraries=places"></script>
    <script type="text/javascript" src="~/Scripts/Controllers/HomeController.js"></script>
}